<% @micropofts.each do |micropoft| %>
  <tr>
    <td><%= micropoft.content %></td>
    <td><%= micropoft.user_id %></td>
    <td><%= link_to 'Show', micropoft %></td>
    <td><%= link_to 'Edit', edit_micropoft_path(micropoft) %></td>
